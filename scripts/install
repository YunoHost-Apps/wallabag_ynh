#!/bin/bash

set -e

# Retrieve arguments
domain=$1
path=$2
app=${!#}

# Set app specific variables
dbname=$app
dbuser=$app

# Check domain/path availability
sudo yunohost app checkurl $domain$path -a $app \
  || exit 1

# Generate random password
dbpass=$(dd if=/dev/urandom bs=1 count=200 2> /dev/null | tr -c -d 'A-Za-z0-9' | sed -n 's/\(.\{24\}\).*/\1/p')

# Initialize database and store mysql password for upgrade
sudo yunohost app initdb $dbuser -p $dbpass -s $(readlink -e ../sources/install/mysql.sql)
sudo yunohost app setting $app mysqlpwd -v $dbpass

# Copy files to the right place
final_path="/var/www/$app"
sudo mkdir -p $final_path
sudo cp -a ../sources/* $final_path
sudo unzip ../sources/vendor.zip -d $final_path

# Set permissions to roundcube directory
sudo chown -R www-data: $final_path

# Configuration
sudo cp ../conf/config.inc.php $final_path/inc/poche/
sudo sed -i "s/yunouser/$dbuser/g" $final_path/inc/poche/config.inc.php
sudo sed -i "s/yunopass/$dbpass/g" $final_path/inc/poche/config.inc.php
sudo sed -i "s/yunobase/$dbname/g" $final_path/inc/poche/config.inc.php
j=$(dd if=/dev/urandom bs=1 count=200 2> /dev/null | tr -c -d 'A-Za-z0-9' | sed -n 's/\(.\{40\}\).*/\1/p')
sudo sed -i "s/KEY1/$j/g" $final_path/inc/poche/config.inc.php
sudo rm -Rf $final_path/install

# Modify Nginx configuration file and copy it to Nginx conf directory
sed -i "s@PATHTOCHANGE@$path@g" ../conf/nginx.conf*
sed -i "s@ALIASTOCHANGE@$final_path/@g" ../conf/nginx.conf*
sudo cp ../conf/nginx.conf /etc/nginx/conf.d/$domain.d/$app.conf

# Add users
wallabag_users=$(ldapsearch -h localhost -b ou=users,dc=yunohost,dc=org -x objectClass=mailAccount uid | grep uid: | sed 's/uid: //' | xargs)
id=1
for walluser in $wallabag_users
do
    password=$(dd if=/dev/urandom bs=1 count=200 2> /dev/null | tr -c -d 'A-Za-z0-9' | sed -n 's/\(.\{40\}\).*/\1/p')
    mysql -u $dbuser -p$dbpass $dbname -e "insert into users (id,username,password,name,email) values ('','$walluser','$passwd','$walluser','');"
    mysql -u $dbuser -p$dbpass $dbname -e "insert into users_config (id,user_id,name,value) values ('','$id','pager','10');"
    mysql -u $dbuser -p$dbpass $dbname -e "insert into users_config (id,user_id,name,value) values ('','$id','language','en_EN.utf8');"
    mysql -u $dbuser -p$dbpass $dbname -e "insert into users_config (id,user_id,name,value) values ('','$id','theme','baggy');"
    ((id++)) 
done

# Enable api for client
sudo yunohost app setting $app unprotected_uris -v "/"

# Reload Nginx and regenerate SSOwat conf
sudo service nginx reload
sudo yunohost app ssowatconf
